.add{
  height:300rpx;
  width:100%;
  border-top:1px solid #999;
  border-bottom:1px solid #999;
  line-height:300rpx;
  margin:20rpx 0;
}
.add image{
  height:45rpx;
  width:45rpx;
  border:1px solid #999;
  vertical-align: middle;
  margin-left:170rpx;
  margin-right:170rpx;
}
/* 模板 */
.collection {
  height: 260rpx;
  margin-bottom: 25rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border: 1px solid #999;
}

.pic{
  border: 1px solid red;
  height: 100%;
  width: 40%;
}
.pic image{
  width:100%;
  height:100%;

}
 
.txt {
  height: 100%;
  width: 55%;
  display: flex;
  flex-direction: column;
}

.txt text {
  margin-top: 20rpx;
}
